@model NewsPanel.Domain.Core.KeywordEntities.Keyword

@{
    ViewData["Title"] = "Add Keyword";

}



<div class=".container ">
    <div class="d-flex justify-content-center ">
        <form method="post" asp-controller="Keyword" asp-action="AddKeyword">
            <div class="form-group ">
                <label asp-for="@Model.Title"></label>
                <input type="text" asp-for="@Model.Title" value="@Model.Title" class="form-control" autofocus required maxlength="30" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <div>
                    <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="Keyword" asp-action="List">
                        <span class="font-weight-bold text-lg">Back</span>
                    </a>
                </div>
                <div>
                    <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="submit" />
                </div>
            </div>
        </form>
    </div>
</div>

