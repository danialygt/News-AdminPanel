@model NewsPanel.Domain.Core.PlaceEntities.Place


@{
    ViewData["Title"] = "Delete Place";

}


<div class=".container ">
    @if (Model != null)
    {
        <div class="d-flex justify-content-center ">
            <form method="post" asp-controller="Place" asp-action="DeletePlace">
                <div class="form-group ">
                    <label>Are you sure to delete this Place:</label>
                    <input type="text" asp-for="@Model.Name" value="@Model.Name" class="form-control" readonly />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <div>
                        <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="Place" asp-action="List">
                            <span class="font-weight-bold text-lg">Back</span>
                        </a>
                    </div>
                    <div>
                        <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Delete" />
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="row ">
            <div>
                <span class="text-danger">Place Not Found!</span>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-2">
                <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="Place" asp-action="List">
                    <span class="text-lg p-2 font-weight-bold m-2 text-gray-100">Back</span>
                </a>
            </div>
        </div>
    }
</div>


