@model NewsPanel.EndPoints.MVC.Models.Newss.AddNewsModel


@{
    ViewData["Title"] = "Delete News";

}


<div class=".container ">
    @if (Model != null)
    {
    <div class="d-flex justify-content-center ">
        <form method="post" asp-controller="News" asp-action="DeleteNews">
            <label>Are You sure to delete this News?</label>

            <div class="form-group ">
                <label asp-for="@Model.Title"></label>
                <input type="text" asp-for="@Model.Title" value="@Model.Title" class="form-control" readonly />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.Content"></label>
                <textarea asp-for="@Model.Content" value="@Model.Content" class="form-control" readonly></textarea>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.PublishDate"></label>
                <input type="text" asp-for="@Model.PublishDate" value="@Model.PublishDate.Date.ToString()" class="form-control" readonly />
                <span asp-validation-for="@Model.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.SelectedCategory"></label>
                <div class="form-control" readonly>
                    @if (Model.CategoryForDisplay != null)
                    {
                        @foreach (var item in Model.CategoryForDisplay)
                        {

                            <span>@item.Title, </span>

                        }
                    }
                </div>
                <span asp-validation-for="@Model.SelectedCategory" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.SelectedKeyword"></label>
                <div class="form-control" readonly>
                    @if (Model.KeywordForDisplay != null)
                    {
                        @foreach (var item in Model.KeywordForDisplay)
                        {

                            <span>@item.Title, </span>

                        }
                    }
                </div>
                <span asp-validation-for="@Model.SelectedKeyword" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="@Model.SelectedPlace"></label>
                <div class="form-control" readonly>
                    @if (Model.PlaceForDisplay != null)
                    {
                        @foreach (var item in Model.PlaceForDisplay)
                        {

                            <span>@item.Name, </span>

                        }
                    }
                </div>
                <span asp-validation-for="@Model.SelectedPlace" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <div>
                    <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="News" asp-action="List">
                        <span class="font-weight-bold text-lg">Back</span>
                    </a>
                </div>
                <div>
                    <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="Delete" />
                </div>
            </div>
        </form>
    </div>
    }
    else
    {
        <div class="row ">
            <div>
                <span class="text-danger">News Not Found!</span>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-2">
                <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="News" asp-action="List">
                    <span class="text-lg p-2 font-weight-bold m-2 text-gray-100">Back</span>
                </a>
            </div>
        </div>
    }
</div>


