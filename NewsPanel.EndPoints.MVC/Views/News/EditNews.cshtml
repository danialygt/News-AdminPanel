@model NewsPanel.EndPoints.MVC.Models.Newss.AddNewsModel

@{
    ViewData["Title"] = "Edit News";
}

<div class=".container ">
    @if (Model != null)
    {
        <div class="d-flex justify-content-center ">
            <form method="post" asp-controller="News" asp-action="EditNews">
                <label>Edit News:</label>

                <div class="form-group ">
                    <label asp-for="@Model.Title"></label>
                    <input type="text" asp-for="@Model.Title" value="@Model.Title" class="form-control" autofocus required maxlength="150" />
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="@Model.Content"></label>
                    <textarea asp-for="@Model.Content" value="@Model.Content" class="form-control" required></textarea>
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                @*<div class="form-group ">
            <label asp-for="@Model.PublishDate"></label>
            <input type="date" asp-for="@Model.PublishDate" value="@Model.PublishDate" class="form-control" required />
            <span asp-validation-for="@Model.PublishDate" class="text-danger"></span>
        </div>*@
                <div class="form-group ">
                    <label asp-for="@Model.File"></label>
                    <input type="file" asp-for="@Model.File" value="@Model.File" class="form-control" />
                    <span asp-validation-for="@Model.File" class="text-danger"></span>
                </div>
        <div class="form-group ">
            <label asp-for="@Model.SelectedCategory"></label>
            <select class="js-example-basic-multiple form-control select2" name="SelectedCategory" multiple>
                @foreach (var item in Model.CategoryForDisplay)
                {
                    @if (Model.SelectedCategory != null && Model.SelectedCategory.Contains(item.Id))
                    {
                        <option value="@item.Id" selected >@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.SelectedCategory" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="@Model.SelectedKeyword"></label>
            <select class="js-example-basic-multiple form-control select2" name="SelectedKeyword" multiple>
                @foreach (var item in Model.KeywordForDisplay)
                {
                    @if (Model.SelectedKeyword != null && Model.SelectedKeyword.Contains(item.Id))
                    {
                        <option value="@item.Id" selected>@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.SelectedKeyword" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="@Model.SelectedPlace"></label>
            <select class="js-example-basic-multiple form-control select2" name="SelectedPlace" multiple>
                @foreach (var item in Model.PlaceForDisplay)
                {
                    @if (Model.SelectedPlace != null && Model.SelectedPlace.Contains(item.Id))
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="@Model.SelectedPlace" class="text-danger"></span>
        </div>

                <div class="form-group">
                    <div asp-validation-summary="All"></div>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <div>
                        <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="News" asp-action="List">
                            <span class="font-weight-bold text-lg">Back</span>
                        </a>
                    </div>
                    <div>
                        <input type="submit" class="text-lg font-weight-bold  btn btn-info m-2 p-2 float-right" value="submit" />
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="row ">
            <div>
                <span class="text-danger">News Not Found!</span>
            </div>
        </div>
        <div class="row justify-content-end">
            <div class="col-2">
                <a class="btn btn-secondary float-right" style="padding:8px;margin-top:9px;" asp-controller="News" asp-action="List">
                    <span class="text-lg p-2 font-weight-bold m-2 text-gray-100">Back</span>
                </a>
            </div>
        </div>
    }
</div>