@model List<NewsPanel.Domain.Core.CategoryEntities.Category>
@{
    ViewData["Title"] = "Category List";

}


    <div class=".container ">
        @if (Model != null)
        {
            <div class="d-flex flex-column align-items-center">

                <span class="d-block display-4 font-weight-bold pb-3">Categories</span>
                <br />
                <table class="table table-bordered table-dark table-striped " style="width:50%">
                    <tr>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                <a class="btn btn-info" asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id">
                                    <span class="text-lg font-weight-bold">Edit</span>
                                </a>

                                |

                                <a class="btn btn-info" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id">
                                    <span class="text-lg font-weight-bold">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="row ">
                <div>
                    <span class="text-danger">There is no Category! Add one</span>
                </div>
            </div>
        }

        <div class="row justify-content-end">
            <div class="col-3">
                <a class="btn btn-info btn-icon-split" asp-controller="Category" asp-action="AddCategory">
                    <span class="text-lg p-2 font-weight-bold m-2 text-gray-100">Add Category</span>
                </a>
            </div>
        </div>
    </div>